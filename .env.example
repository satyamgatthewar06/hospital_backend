# Hospital Management System - Backend Configuration

# ============ Server Configuration ============
NODE_ENV=development
PORT=5000

# ============ Database Configuration ============
MONGODB_URI=mongodb://localhost:27017/hospital_management
# For MongoDB Atlas, use:
# MONGODB_URI=mongodb+srv://username:password@cluster.mongodb.net/hospital_management?retryWrites=true&w=majority

# ============ JWT Configuration ============
JWT_SECRET=your_super_secret_jwt_key_change_this_in_production_at_least_32_characters
JWT_EXPIRATION=7d
REFRESH_TOKEN_SECRET=your_super_secret_refresh_token_key_change_this_in_production
REFRESH_TOKEN_EXPIRATION=30d

# ============ Frontend Configuration ============
FRONTEND_URL=http://localhost:3000

# ============ Email Configuration (Optional) ============
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your_email@gmail.com
SMTP_PASSWORD=your_app_password
SMTP_FROM=noreply@hospitalmanagement.com

# ============ File Upload Configuration ============
MAX_FILE_SIZE=52428800
UPLOAD_DIR=./uploads

# ============ API Configuration ============
API_BASE_URL=http://localhost:5000
API_VERSION=v1

# ============ Logging Configuration ============
LOG_LEVEL=debug
LOG_FILE=./logs/app.log

# ============ Razorpay Configuration (Optional) ============
RAZORPAY_KEY_ID=your_razorpay_key
RAZORPAY_KEY_SECRET=your_razorpay_secret

# ============ AWS Configuration (Optional) ============
AWS_ACCESS_KEY_ID=your_aws_key
AWS_SECRET_ACCESS_KEY=your_aws_secret
AWS_REGION=us-east-1
AWS_S3_BUCKET=hospital-management-bucket
